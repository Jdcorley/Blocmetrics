= form_for @registered_application do |f|
  - if @registered_application.errors.any?
    #error_explanation
      %h2= "#{pluralize(@registered_application.errors.count, "error")} prohibited this registered_application from being saved:"
      %ul
        - @registered_application.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name, class: 'form-control', placeholder: "Enter application name"
  .field
    = f.label :url
    = f.text_field :url, class: 'form-control', placeholder: "Enter application url"
  .actions
    = f.submit 'Save'
